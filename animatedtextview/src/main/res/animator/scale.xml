<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:propertyName="scaleY"
        android:valueTo="0.0"
        android:duration="@android:integer/config_shortAnimTime"/>

    <objectAnimator
        android:propertyName="scaleY"
        android:valueTo="0.5"
        android:duration="@android:integer/config_shortAnimTime"/>

    <objectAnimator
        android:propertyName="scaleY"
        android:valueTo="0.8"
        android:duration="@android:integer/config_shortAnimTime"/>

    <objectAnimator
        android:propertyName="scaleY"
        android:valueTo="1.5"
        android:duration="@android:integer/config_shortAnimTime"/>

    <objectAnimator
        android:propertyName="scaleY"
        android:valueTo="1.0"
        android:duration="@android:integer/config_shortAnimTime"/>
</set>